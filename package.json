{
  "name": "ramllint",
  "version": "1.0.2",
  "description": "RAML Lint",
  "author": "Tyler Smith <TylerSmith@quickenloans.com",
  "contributors": [
    "Joshua T Kalis <KalisJoshua@gmail.com>",
    "Jorden Lowe <JordenLowe@quickenloans.com>"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/QuickenLoans/ramllint"
  },
  "bugs": {
    "url": "http://github.com/QuickenLoans/ramllint/issues"
  },
  "bin": {
    "ramllint": "./src/cli.js"
  },
  "main": "src/linter.js",
  "dependencies": {
    "raml2obj": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^0.20.0",
    "istanbul": "^0.3.13",
    "jsdoc": "^3.3.0-beta3",
    "jshint": "^2.7.0",
    "mocha": "^2.2.4",
    "plato": "^1.4.0"
  },
  "scripts": {
    "coverage": "istanbul cover --dir docs/coverage _mocha",
    "doc": "jsdoc -c ./conf.json src/**.js",
    "doc-pub": "git subtree push --prefix=docs upstream gh-pages",
    "predoc-pub": "npm run doc",
    "hint": "jshint src/**.js",
    "lint": "npm run hint && eslint src/**.js",
    "quality": "npm run lint && npm run coverage",
    "stats": "plato -d docs/stats src/**.js",
    "test": "mocha",
    "test-w": "npm test -- -R min -w --watch-extensions json"
  }
}
